<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <TextView android:layout_width="0dp" android:layout_height="17dp"
              android:id="@+id/action_label" android:singleLine="true" android:ellipsize="middle"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
              app:layout_constraintStart_toEndOf="@+id/actionIcon" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" app:srcCompat="@color/opaque" android:id="@+id/actionIcon"
            android:contentDescription="@string/action_icon_content_description"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>